@model IntermediarioMVC.Models.ChangeState
@{
    ViewBag.Title = "ModifyState";
}

<h2>ModifyState</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
     
        @Html.HiddenFor(model => model.ProductInStockId)
        @Html.HiddenFor(model => model.Date)
        @Html.HiddenFor(model => model.BeforeState)
     
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ProductInStock.Product.ProductName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductInStock.Product.ProductName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ProductInStock.Provider.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductInStock.Provider.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BeforeState)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BeforeState)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>
        </dl>
        <div class="form-group">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NextState, "Next State", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.NextState, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NextState, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modify State" class="btn btn-success" />
            </div>
        </div>
        
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Stock","Transfer", new { }, new { @class = "btn btn-warning"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
