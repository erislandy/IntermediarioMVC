@model IEnumerable<IntermediarioMVC.Models.ProductInStock>

@{
    ViewBag.Title = "Stock";
}

<h2>Stock</h2>
<hr/>
<h4 class="alert-danger">@ViewBag.Alert</h4>
<table class="table table-info table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Provider.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.PriceInput)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
        <th></th>
      
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Provider.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.PriceInput)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.ActionLink("Modify State", "ModifyState", new { productInStockId = item.ProductInStockId }, new { @class = "btn btn-warning" })
               
            </td>
            
            <td>
                @if (item.State == IntermediarioMVC.Models.StateEnum.Available)
                {
                    @Html.ActionLink("To sell", "SaleAction", new { productInStockId = item.ProductInStockId }, new { @class = "btn btn-success" })
                }
            </td>
           
        </tr>
    }

</table>
