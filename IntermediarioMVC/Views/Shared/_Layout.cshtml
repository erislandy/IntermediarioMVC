<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color:honeydew">
    <nav class="navbar  navbar-expand-sm bg-info navbar-dark fixed-top">
        <a class="navbar-brand" href="#">
            <img src="~/Content/Images/Intermediario.png" alt="Logo" style="width:50px; margin:0px">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">

            <ul class="navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("About", "About", "Home", new { }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", new { }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Category", "Index", "Categories", new { }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Product", "Index", "Products", new { }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Provider", "Index", "Providers", new { }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Pay", "Index", "Pays", new { }, new { @class = "nav-link" })</li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">Transfer<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Stock", "Stock", "Transfer", new { }, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Purchase", "Purchase", "Transfer", new { }, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Sale", "Sale", "Transfer", new { }, new { @class = "dropdown-item" })</li>
                    </ul>
                </li>
            </ul>



        </div>
        @Html.Partial("_LoginPartial")

    </nav>
    <div class="container body-content mt-5">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Middleman application web. Team work: ECR</p>
         
        </footer>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
